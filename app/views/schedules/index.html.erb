<h1>スケジュール一覧</h1>

<%= link_to '新しいスケジュールを作成', new_schedule_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_time ? schedule.start_time.strftime("%Y-%m-%d %H:%M:%S") : '未定' %></td>
        <td><%= schedule.end_time ? schedule.end_time.strftime("%Y-%m-%d %H:%M:%S") : '未定' %></td>
        <td><%= schedule.all_day? ? '○' : '' %></td>
        <td><%= schedule.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
          <%= link_to '詳細', schedule_path(schedule), class: 'btn btn-info btn-sm' %>
          <%= link_to '編集', edit_schedule_path(schedule), class: 'btn btn-warning btn-sm ml-2' %>
          <%= link_to '削除', schedule_path(schedule), method: :delete, data: { confirm: "スケジュール「#{schedule.title}」を削除します。よろしいですか？" }, class: 'btn btn-danger btn-sm ml-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>